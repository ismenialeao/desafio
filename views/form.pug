extends layout

block content
  -data = data || {}
  a(href='points') cordenadas cadastradas
  if errors
    ul
      for error in errors
        li= error.msg

  form(action=".", method="POST")
    label(for="name") Name:
    input(
      	type="text"
      	id="name"
      	name="name"
	    value=10
    )
    br
    label(for="x") Cordenada X:
    input(
      	type="text"
      	id="latitude"
      	name="latitude"
	    value=10
    )
    br
    label(for="y") Cordenada Y:
    input(
      	type="text"
      	id="longitude"
      	name="longitude"
	    value=1
    )
    input(type="submit" value="cadastrar")

