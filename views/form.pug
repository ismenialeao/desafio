extends layout

block content
  -data = data || {}
  a(href='points') coordenadas cadastradas
  if errors
    ul
      for error in errors
        li= error.msg

  form(action=".", method="POST")
    label(for="name") Name:
    input(
      	type="text"
      	id="name"
      	name="name"
    )
    br
    label(for="x") Coordenada X:
    input(
      	type="text"
      	id="latitude"
      	name="latitude"
    )
    br
    label(for="y") Coordenada Y:
    input(
      	type="text"
      	id="longitude"
      	name="longitude"
    )
    input(type="submit" value="cadastrar")

